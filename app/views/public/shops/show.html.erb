<div class="row">
  <div class="col-md-5 col-sm-12 mt-3">
    <%= image_tag @shop.get_shop_image(400,300) %>
  </div>
  <h2 class="col-md-6 col-sm-12 mt-md-5 pt-3"><%= @shop.name %></h2>

  <% if @shop.introduction.present? && @shop.shop_in_image.present? %>
    <div class="col-md-7 col-sm-12 my-4 offset-md-1 pt-md-5">
      <h3>お店のこだわり</h3>
      <h5><%= @shop.introduction %></h5>
    </div>

    <div class="text-md-right col-md-4 col-sm-12 mt-md-5 mb-3">
      <%= image_tag @shop.get_shop_in_image(320,240) %>
    </div>

    <div class="col-12 my-3">
      <h3 class="col-12">このお店で売っている商品</h3>

      <div class="row">
        <% @items.each do |item| %>
          <%= render "public/items/item", item: item %>
        <% end %>
      </div>
    </div>

    <h5 class="col-12 mt-5">店舗情報</h5>
    <div class="card my-3">
      <div class="row no-gutters">
        <div class="col-5 m-3">
          <%= image_tag @shop.get_shop_image(240,180) %>
        </div>
        <div class="col-6">
          <div class="card-body">
            <h6 class="card-title"><%= @shop.name %></h6>
            <p><strong>店舗住所</strong></p>
            <p>〒<%= @shop.postal_code %></p>
            <p><%= @shop.address %></p>
          </div>
        </div>
      </div>
    </div>
  <% else %>
  <% end %>
</div>
