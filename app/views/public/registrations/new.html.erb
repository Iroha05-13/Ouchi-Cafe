<h2>新規登録</h2>

<%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user' do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <label>お名前</label><br>
    <%= f.text_field :last_name, autofocus: true, placeholder: "姓" %> <i>　</i>
    <%= f.text_field :first_name, autofocus: true, placeholder: "名" %>
  </div>
  <br>

  <div class="field">
    <%= f.text_field :last_name_kana, autofocus: true, placeholder: "セイ" %> <i>　</i>
    <%= f.text_field :first_name_kana, autofocus: true, placeholder: "メイ" %>
  </div>
  <br>

  <div class="field">
    <%= f.label :postal_code, "〒" %>
    <%= f.text_field :postal_code, autofocus: true, placeholder: "000-0000" %>
  </div>

  <div class="field">
    <%= f.label :address, "ご住所" %>
    <%= f.text_field :address, autofocus: true, placeholder: "〇〇県××市～", :size => "45" %>
  </div>

  <div class="field">
    <%= f.label :telephone_number, "お電話番号" %>
    <%= f.text_field :telephone_number, autofocus: true, placeholder: "ハイフンなし" %>
  </div>

  <div class="field">
    <%= f.label :email, "Eメールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード(確認用)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "登録する", class: "btn btn-outline-secondary btn-sm" %>
  </div>
<% end %>

<p>登録済みの方は<%= render "public/shared/links" %>からログインできます</p>
