<div class="row">
  <h2 class="col-12">新規登録</h2>

  <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user' do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <table class="table table-sm table-borderless mx-auto col-12 form-group">
      <tr>
        <td><label>お名前</label></td>
        <td>
          <%= f.text_field :last_name, autofocus: true, placeholder: "姓" %> <i>　</i>
          <%= f.text_field :first_name, autofocus: true, placeholder: "名" %>
        </td>
      </tr>
      <tr>
        <td><label>カナ</label></td>
        <td>
          <%= f.text_field :last_name_kana, autofocus: true, placeholder: "セイ" %> <i>　</i>
          <%= f.text_field :first_name_kana, autofocus: true, placeholder: "メイ" %>
        </td>
      </tr>
      <tr>
        <td><%= f.label :postal_code, "〒" %></td>
        <td><%= f.text_field :postal_code, autofocus: true, placeholder: "000-0000" %></td>
      </tr>
      <tr>
        <td><%= f.label :address, "ご住所" %></td>
        <td><%= f.text_field :address, autofocus: true, placeholder: "〇〇県××市～", :size => "45" %></td>
      </tr>
      <tr>
        <td><%= f.label :telephone_number, "お電話番号" %></td>
        <td><%= f.text_field :telephone_number, autofocus: true, placeholder: "ハイフンなし" %></td>
      </tr>
      <tr>
        <td><%= f.label :email, "Eメールアドレス" %></td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email", :size => "30" %></td>
      </tr>
      <tr>
        <td>
          <%= f.label :password, "パスワード" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %>
        </td>
        <td><%= f.password_field :password, autocomplete: "new-password" %></td>
      </tr>
      <tr>
        <td><%= f.label :password_confirmation, "パスワード(確認用)" %></td>
        <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
      </tr>
    </table>

    <div class="actions text-center my-3">
      <%= f.submit "登録する", class: "btn btn-outline-secondary btn-sm" %>
    </div>
  <% end %>

  <p class="col-12">登録済みの方は<%= render "public/shared/links" %>からログインできます</p>

</div>
