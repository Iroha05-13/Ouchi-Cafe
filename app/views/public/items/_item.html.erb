<div class="card item-box mx-3 mt-4 shadow-md" style="width: 14rem;">
  <div>
    <%= link_to item_path(item.id), class: "text-dark" do %>
      <%= image_tag item.get_item_image(200,120), class: "card-img-top"; %>
      <p class="card-body"><%= truncate(item.name, length: 20) %></p>
    <% end %>
    <h5 class="card-title"><strong>ï¿¥<%= item.with_tax %></strong></h5>
  </div>
  <div class="card-footer h-100">
    <%= link_to shop_path(item.shop.id), class: "text-dark" do %>
      <div class="card-text">
        <%= image_tag item.shop.get_shop_image(50,50), class: "bt-3 rounded-circle"; %>
        <%= truncate(item.shop.name, length: 10, class: "w-100") %>
      </div>
    <% end %>
  </div>
</div>