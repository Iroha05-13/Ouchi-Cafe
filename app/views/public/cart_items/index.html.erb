<h2><%= current_user.name %>さんのショッピングカート</h2>
<p><%= flash[:notice] %></p>

<% if @cart_items.any? %>
    <div>
        <%= link_to "カートを空にする", destroy_all_path, method: :delete, "data-confirm" => "カートの中身が全て削除されます。よろしいですか？", class: "btn btn-outline-secondary" %>
    </div><br>

    <table class="table table-sm">
        <tr>
            <th></th>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
        </tr>
        <%= @cart_items.each do |cart_item| %>
            <tr>
                <td><%= image_tag cart_item.item.get_item_image(60,36) %></td>
                <td><%= cart_item.item.name %></td>
                <td><%= cart_item.item.with_tax %></td>
                <td>
                    <%= form_with model: cart_item, url: cart_item_path(cart_item.id), method: :patch, local: true do |f| %>
                        <%= f.select :amount, *[1..10],{selected: cart_item.amount} %>
                        <%= f.submit "変更", class: "btn-outline-secondary btn-sm" %>
                    <% end %>
                </td>
                <td><%= cart_item.subtotal %></td>
                <td><%= link_to "削除", cart_item_path(cart_item.id), method: :delete, "data-confirm" => "商品がカートから削除されます。よろしいですか？", class: "btn-outline-secondary btn-sm" %></td>
            </tr>
        <% end %>
    </table>
<% else %>
<% end %>
