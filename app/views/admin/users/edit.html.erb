<h2><span><%= @user.name %></span>さんの会員情報</h2>

<%= form_with model: @user, url: admin_user_path, method: :patch, local: true do |f| %>

  <div class="form-group">
    <label>名前</label><br>
    <%= f.text_field :last_name, autofocus: true, placeholder: "姓" %> <i>　</i>
    <%= f.text_field :first_name, autofocus: true, placeholder: "名" %>
  </div>
  <br>

  <div class="form-group">
    <%= f.text_field :last_name_kana, autofocus: true, placeholder: "セイ" %> <i>　</i>
    <%= f.text_field :first_name_kana, autofocus: true, placeholder: "メイ" %>
  </div>
  <br>

  <div class="form-group">
    <%= f.label :postal_code, "〒" %>
    <%= f.text_field :postal_code, autofocus: true, placeholder: "000-0000" %>
  </div>

  <div class="form-group">
    <%= f.label :address, "住所" %>
    <%= f.text_field :address, autofocus: true, placeholder: "〇〇県××市～", :size => "45" %>
  </div>

  <div class="form-group">
    <%= f.label :telephone_number, "電話番号" %>
    <%= f.text_field :telephone_number, autofocus: true, placeholder: "ハイフンなし" %>
  </div>

  <div class="form-group">
    <%= f.label :email, "Eメールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form-group">
    <%= f.label :is_active, "会員ステータス" %>
    <div class="radio_button">
      <%= f.radio_button :is_active, true %>
      <%= f.label :is_active, "有効" ,value: true %>
      <%= f.radio_button :is_active, false %>
      <%= f.label :is_active, "退会", value: false %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "変更を保存" %>
  </div>
<% end %>
