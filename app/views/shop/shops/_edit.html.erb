<div class="form-group">
  <%= f.label :shop_image, "店舗の写真" %><br>
  <%= f.file_field :shop_image, accept: "image/*" %>
</div>

<div class="form-group">
  <%= f.label :shop_in_image, "内装写真を追加" %><br>
  <%= f.file_field :shop_in_image, accept: "image/*" %>
</div>

<div class="form-group">
  <%= f.label :name, "店舗名" %><br>
  <%= f.text_field :name, autofocus: true %>
</div>

<div class="form-group">
  <%= f.label :introduction, "お店のこだわり" %><br>
  <%= f.text_area :introduction, autofocus: true, :size => "50x6", placeholder: "例：国産小麦や地元の食材を使った地産地消が売りです。" %>
</div>

<div class="form-group">
  <%= f.label :postal_code, "〒" %>
  <%= f.text_field :postal_code, autofocus: true, placeholder: "000-0000" %>
</div>

<div class="form-group">
  <%= f.label :address, "住所" %>
  <%= f.text_field :address, autofocus: true, placeholder: "〇〇県××市～", :size => "45" %>
</div>

<div class="form-group">
  <%= f.label :telephone_number, "電話番号" %><br>
  <%= f.text_field :telephone_number, autofocus: true, placeholder: "ハイフンなし" %>
</div>

<div class="form-group">
  <%= f.label :email, "Eメールアドレス" %><br />
  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
</div>

<div class="form-group">
  <%= f.submit "変更を保存", class: "btn btn-outline-secondary btn-sm" %>
</div>